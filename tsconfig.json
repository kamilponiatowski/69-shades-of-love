{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "vite/client",
        "node"
      ],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts", 
      "src/**/*.tsx", 
      "src/**/*.vue"
    ],
    "exclude": ["node_modules"]
  }